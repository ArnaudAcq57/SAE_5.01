<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_camera">

    <!-- ÉCRAN CAMÉRA -->
    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.example.sae_5_01_frontend.ui.camera.CameraFragment"
        android:label="@string/title_camera"
        tools:layout="@layout/fragment_camera" />

    <!-- ÉCRAN HISTORIQUE -->
    <fragment
        android:id="@+id/navigation_historique"
        android:name="com.example.sae_5_01_frontend.ui.historique.HistoriqueFragment"
        android:label="@string/title_historique"
        tools:layout="@layout/fragment_historique">

        <action
            android:id="@+id/action_navigation_historique_to_navigation_details"
            app:destination="@id/navigation_details" />
    </fragment>


    <!-- ÉCRAN DETAILS -->
    <fragment
        android:id="@+id/navigation_details"
        android:name="com.example.sae_5_01_frontend.ui.details.DetailsFragment"
        android:label="Détails"
        tools:layout="@layout/fragment_details">

        <argument
            android:name="imageId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/navigation_parametres"
        android:name="com.example.sae_5_01_frontend.ui.parametres.ParametresFragment"
        android:label="Paramètres"
        tools:layout="@layout/fragment_parametres" />


</navigation>
